<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Peshko_ProgressBar::css/miniprogress.css"/>
    </head>
    <body>
        <referenceContainer name="minicart.addons">
            <block class="Peshko\ProgressBar\Block\Cart\Sidebar" name="shipping_bar" template="Peshko_ProgressBar::cart/minicart.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="minicart-addons" xsi:type="array">
                                <item name="component" xsi:type="string">Peshko_ProgressBar/js/view/minicartaddons</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Peshko_ProgressBar/minicartaddons/content</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
